{
    "name": "solution-forest/workflow-engine-core",
    "description": "Framework-agnostic workflow engine for PHP applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "workflow",
        "state-machine",
        "business-process",
        "automation",
        "php"
    ],
    "authors": [
        {
            "name": "Solution Forest",
            "email": "info@solutionforest.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "nesbot/carbon": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "SolutionForest\\WorkflowEngine\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SolutionForest\\WorkflowEngine\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
